{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "documents/**/*.{jpg,png,svg}"
        ]
      }
    ],
    "output": "../docs",
    "template": [
      "default","templates/custom"
    ],
    "globalMetadata": {
      "_appName": "AuthZI",
      "_appTitle": "AuthZI",
      "_appFooter": "AuthZI",
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_disableContribution": true,
      "pdf": false
    }
  }
}